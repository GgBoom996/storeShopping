<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itsource.mapper.BrandMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.itsource.domain.Brand">
        <id column="id" property="id" />
        <result column="createTime" property="createTime" />
        <result column="updateTime" property="updateTime" />
        <result column="name" property="name" />
        <result column="englishName" property="englishName" />
        <result column="firstLetter" property="firstLetter" />
        <result column="description" property="description" />
        <result column="product_type_id" property="productTypeId" />
        <result column="sortIndex" property="sortIndex" />
        <result column="logo" property="logo" />
    </resultMap>

    <resultMap id="ProductMap" type="cn.itsource.domain.Brand">
        <id column="id" property="id" />
        <result column="createTime" property="createTime" />
        <result column="updateTime" property="updateTime" />
        <result column="name" property="name" />
        <result column="englishName" property="englishName" />
        <result column="firstLetter" property="firstLetter" />
        <result column="description" property="description" />
        <result column="product_type_id" property="productTypeId" />
        <result column="sortIndex" property="sortIndex" />
        <result column="logo" property="logo" />
        <result column="ptid" property="productType.id"/>
        <result column="ptname" property="productType.name"/>
        <result column="ptdescription" property="productType.description"/>
    </resultMap>

    <sql id="common">
        b.id,
        b.createTime,
        b.updateTime,
        b.name,
        b.englishName,
        b.firstLetter,
        b.description,
        b.product_type_id,
        b.sortIndex,
        b.logo
    </sql>

    <sql id="keywords">
        <where>
             <if test="query.keyword!=null and query.keyword!=''">
                 AND (
                    b.name like  concat('%',#{query.keyword},'%') or
                    b.englishName like concat('%',#{query.keyword},'%') or
                    b.description like concat('%',#{query.keyword},'%')
                 )
             </if>
        </where>
    </sql>

    <select id="selectPage" resultMap="ProductMap">
      SELECT <include refid="common"/>,pt.id ptid,pt.name ptname,pt.description ptdescription
        FROM t_brand b LEFT JOIN t_product_type pt ON b.product_type_id = pt.id
        <include refid="keywords"/>
    </select>

</mapper>
